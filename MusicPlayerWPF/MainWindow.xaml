<Window x:Class="MusicPlayerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayerWPF"
        xmlns:musicPlayer="clr-namespace:MusicPlayerConsole;assembly=MusicPlayerConsole"
        mc:Ignorable="d"
        Title="MusicPlayer" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <TabControl Grid.Column="0" TabStripPlacement="Left">
            <TabItem Header="Play song">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    
                    <Button Name="Button_Choose_File" Content="Choose file" Click="Button_Choose_File_Click"/>
                    <Label Grid.Row="1" Content="Choosen file name: "/>
                    <Label Grid.Row="1" Grid.Column="1" Content="filename" />
                </Grid>
            </TabItem>
            <TabItem Header="Playlists">
                <StackPanel>
                    <Menu>
                        <MenuItem Header="Add"/>
                        <MenuItem Header="Edit"/>
                        <MenuItem Header="Delete"/>
                        <MenuItem Header="Details"/>
                        <Separator/>
                        <MenuItem Header="Export">
                            <MenuItem Header="To XML"/>
                            <MenuItem Header="To JSON"/>
                            <MenuItem Header="To ZIP"/>
                        </MenuItem>
                        <MenuItem Header="Import">
                            <MenuItem Header="From XML"/>
                            <MenuItem Header="From JSON"/>
                            <MenuItem Header="From ZIP"/>
                        </MenuItem>
                    </Menu>
                    <ListBox>

                        <ListBoxItem>Sample playlist</ListBoxItem>
                        <ListBoxItem>Sample playlist</ListBoxItem>
                        <ListBoxItem>Sample playlist</ListBoxItem>
                        <ListBoxItem>Sample playlist</ListBoxItem>
                        <ListBoxItem>Sample playlist</ListBoxItem>
                    </ListBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Songs library">
                <StackPanel>
                    <Menu>
                        <MenuItem Header="Add"/>
                        <MenuItem Header="Edit"/>
                        <MenuItem Header="Delete"/>
                        <MenuItem Header="Details"/>
                    </Menu>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Content="Search" />
                        <TextBox Grid.Column="1"/>
                        <Label Grid.Row="1" Content="Sort" />
                        <ComboBox Grid.Row="1" Grid.Column="1">
                            <ComboBoxItem>By title ascending</ComboBoxItem>
                            <ComboBoxItem>By title descending</ComboBoxItem>
                            <ComboBoxItem>By length</ComboBoxItem>
                            <ComboBoxItem>By author</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                    <ListBox Grid.Row="1" Name="listBox_SongsList" SelectionChanged="listBox_SongsList_SelectionChanged" MouseDoubleClick="listBox_SongsList_MouseDoubleClick" />
                </StackPanel>
            </TabItem>
            <TabItem Header="YouTube">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Link to video"/>
                    <TextBox Name="textBox_YoutubeVideoLink" Grid.Column="1" Text="link"/>
                    <Button Name="button_DownloadYoutubeVideo" Grid.Row="1" Content="Download" Click="button_DownloadYoutubeVideo_Click"/>
                    <Label Content="Link to playlist" Grid.Row="2"/>
                    <TextBox Name="textBox_PlaylistLink" Grid.Row="2" Grid.Column="1" Text="link"/>
                    <Button Name="button_DownloadPlaylist" Grid.Row="3" Content="Download" Click="button_DownloadPlaylist_Click"/>
                    <ProgressBar Name="progressBar_playlistDownload" Grid.Row="4" Grid.ColumnSpan="2" Height="25" Minimum="0" Maximum="6" Value="{Binding Path=(musicPlayer:MusicPlayer.WorkerState)}"/>
                    <Button Name="SIEMA" Grid.Row="5" Content="SIEMA" Click="SIEMA_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Albums">
                <StackPanel>
                    <Menu>
                        <MenuItem Header="Add"/>
                        <MenuItem Header="Edit"/>
                        <MenuItem Header="Delete"/>
                        <MenuItem Header="Details"/>
                    </Menu>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Content="Search" />
                        <TextBox Grid.Column="1"/>
                        <Label Grid.Row="1" Content="Sort" />
                        <ComboBox Grid.Row="1" Grid.Column="1">
                            <ComboBoxItem>By name</ComboBoxItem>
                            <ComboBoxItem>By author</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                    <ListBox Grid.Row="1">
                        <ListBoxItem>Sample album</ListBoxItem>
                        <ListBoxItem>Sample album</ListBoxItem>
                        <ListBoxItem>Sample album</ListBoxItem>
                    </ListBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Autors">
                <StackPanel>
                    <Menu>
                        <MenuItem Header="Add"/>
                        <MenuItem Header="Edit"/>
                        <MenuItem Header="Delete"/>
                        <MenuItem Header="Details"/>
                    </Menu>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Content="Search" />
                        <TextBox Grid.Column="1"/>
                        <Label Grid.Row="1" Content="Sort" />
                        <ComboBox Grid.Row="1" Grid.Column="1">
                            <ComboBoxItem>By name ascending</ComboBoxItem>
                            <ComboBoxItem>By name descending</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                    <ListBox Grid.Row="1">
                        <ListBoxItem>Sample author</ListBoxItem>
                        <ListBoxItem>Sample author</ListBoxItem>
                        <ListBoxItem>Sample author</ListBoxItem>
                        <ListBoxItem>Sample author</ListBoxItem>
                        <ListBoxItem>Sample author</ListBoxItem>
                        <ListBoxItem>Sample author</ListBoxItem>
                    </ListBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Settings">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Label>Save Playlist format</Label>
                    <ComboBox Grid.Column="1" Grid.Row="0">
                        <ComboBoxItem>JSON</ComboBoxItem>
                        <ComboBoxItem>XML</ComboBoxItem>
                    </ComboBox>
                    <Label Grid.Row="1">Default style</Label>
                    <ComboBox Grid.Column="1" Grid.Row="1">
                        <ComboBoxItem>DARK</ComboBoxItem>
                        <ComboBoxItem>LIGHT</ComboBoxItem>
                        <ComboBoxItem>COLOR</ComboBoxItem>
                    </ComboBox>
                    <CheckBox Grid.Row="2" Content="Play songs randomly" />
                </Grid>
            </TabItem>
        </TabControl>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Current song -->
            <StackPanel Grid.Row="0">
                <!--<Grid Grid.Row="0" DataContext="{Binding ElementName=listBox_SongsList, Path=SelectedItem}">-->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <!--<Image Grid.Column="0" Grid.RowSpan="2" Source="img/DefaultImage.png" Width="320" Height="180"/>-->
                    <Image Name="image_CurrentSong" Grid.Column="0" Grid.RowSpan="2" Width="320" Height="180" Source="img/DefaultImage.png"/>
                    <Slider Grid.Column="1" Orientation="Vertical"/>
                    <Image Grid.Column="1" Grid.Row="1" Source="img/Volume.png" Width="30" Height="30"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider Name="slider_SongDuration" Minimum="0" Value="0" ValueChanged="slider_SongDuration_ValueChanged"/>
                    <Label Name="label_SongDuration" Grid.Column="1"/>
                </Grid>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="buttonPreviousSong" Content="Previous" Click="buttonPreviousSong_Click"/>
                    <Button Name="buttonPlaySong" Content="Play" Click="buttonPlaySong_Click"/>
                    <Button Name="buttonNextSong" Content="Next" Click="buttonNextSong_Click"/>
                    <Button Name="buttonShuffleSong" Content="Shuffle" Click="buttonShuffleSong_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Current playlist -->

            <ListBox Grid.Row="1">
                <ListBoxItem>Sample song 1</ListBoxItem>
                <ListBoxItem>Sample song 2</ListBoxItem>
                <ListBoxItem>Sample song 3</ListBoxItem>
                <ListBoxItem>Sample song 4</ListBoxItem>
            </ListBox>
        </Grid>
        
    </Grid>
</Window>
